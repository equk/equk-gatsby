{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "dom",
            "es6"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "jsx": "preserve",
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "node_modules",
        "public",
        ".cache"
    ]
}